/* pages/home/home.wxss */
page{
  height: 100%;
}
.home_main{
  position: relative;
  height: 100%;
}
.titleBg{
    height: 360rpx;
    position: relative;
    background: linear-gradient(rgba(255,255,255,0),rgba(255,255,255,1))
}
.titleBg .imgBg{
    width: 100%;
    height: 100%;
}
.titleBg .main{ 
    position: absolute;
    top: 64rpx;
    width: 100%;
}
.titleBg .title{
    font-size: 34rpx;
    color: #fff;
    width: 100%;
    display: flex;
    justify-content: center;
}
.titleBg .portrait{
    height: 103rpx;
    padding: 0 59rpx;
    display: flex;
}
.titleBg .portrait image{
    height: 103rpx;
    width: 103rpx;
    border-radius: 50%;
    margin-right: 34rpx;
}
.titleBg .main_title{
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding-top: 18rpx;
}

.titleBg .portrait text{
    font-size: 24rpx;
    color: #fff;
}
.titleBg .portrait .username{
    line-height: 49rpx;
}
.titleBg .portrait .phone{
    line-height: 36rpx;
}
.main_box .blogData{
  display: flex;
  height: 180rpx;
  align-items: center;
}
.main_box .blogData view{
  flex:1;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.main_box .blogData view:first-child,.main_box .blogData view:nth-child(2){
  border-right: 1px solid #ccc;
}
.main_box .blogData view text{
  color: #333;
}
.main_box .blogData view text:first-child{
  margin-bottom: 10rpx;
}
.main_box .blogmethods{
  padding: 0 35rpx;
}
.main_box .blogmethods view{
  height: 100rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
  align-items: center;
}
.main_box .blogmethods view wux-icon{
  color: orangered;
  margin-right: 15rpx;
}